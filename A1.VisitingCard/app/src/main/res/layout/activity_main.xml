<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgrd"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/sjec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SJEC"
            android:textStyle="bold"
            android:textSize="55dp"
            android:textColor="#CAA4F9"
            ></TextView>
        <ImageView
            android:id="@+id/logo"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:src="@drawable/sjeclogo"
            android:layout_marginLeft="20dp"
            >

        </ImageView>
    </LinearLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textSize="40dp"
                android:textColor="#0E1A73"

                ></TextView>
            <TextView
                android:id="@+id/myname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Srishti Bhandarkar "
                android:textSize="32dp"
                android:textColor="#fff"

                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/usn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USN:    "
                android:textSize="40dp"
                android:textColor="#0E1A73"

                ></TextView>
            <TextView
                android:id="@+id/myusn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4SO18CS114 "
                android:textSize="32dp"
                android:textColor="#fff"

                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Branch: "
                android:textSize="40dp"
                android:textColor="#0E1A73"

                ></TextView>
            <TextView
                android:id="@+id/mybranch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CSE "
                android:textSize="32dp"
                android:textColor="#fff"

                ></TextView>
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: "
                android:textSize="40dp"
                android:textColor="#0E1A73"

                ></TextView>
            <TextView
                android:id="@+id/myphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9988776655 "
                android:textSize="30dp"
                android:textColor="#fff"

                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textSize="40dp"
                android:textColor="#0E1A73"

                ></TextView>
            <TextView
                android:id="@+id/myemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="srishtib@gmail.com"
                android:textSize="31dp"
                android:textColor="#fff"

                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textSize="40dp"
                android:textColor="#0E1A73"

                ></TextView>
            <TextView
                android:id="@+id/myaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3rd Cross Gandhi Nagar, Mangalore "
                android:textSize="30dp"
                android:textColor="#fff"
                ></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">


        <ImageView
            android:id="@+id/contact"
            android:layout_width="120sp"
            android:layout_height="150sp"
            android:src="@drawable/icon">

        </ImageView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>


